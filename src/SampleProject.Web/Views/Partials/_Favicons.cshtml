@inherits Umbraco.Web.Mvc.UmbracoViewPage
@{
    @*
        This code is generated from 
        Following the instruction on http://realfavicongenerator.net/
        1. Upload your favicon
        2. Configure the settings
        3. Download the zip file
        4. Extract to: ~/content/favicons/
    *@
    string path = "/content/favicon";
    string themeColor = "#ffffff";
    string applicationColor = "#da532c";
}
@* Apple shorcut icons *@
<link rel="apple-touch-icon" sizes="57x57" href="@(path)/apple-icon-57x57.png">
